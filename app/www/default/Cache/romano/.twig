{# Generated file from Resource #}

{% extends "base.twig" %}{% block content %}
{% for item in post %}
  <div class="well">
    <h3>
      <a href="{{ meta.site }}blog/article/{{ item.id }}/{{ item.uri }}">{{ item.title }}</a>
    </h3>
    <span>{{ 'lbl.poston'|lng }} {{ item.date }} by <a href="{{ meta.site }}blog/{{ item.user }}">{{ item.user }}</a>
    with {{ item.total_comments }} comments
    </span>
    <HR>
    <p>{{ item.preview|raw }}<a href="{{ meta.site }}blog/article/{{ item.id }}/{{ item.uri }}.html"> {{ 'lbl.more.post'|lng }}...</a></p>
  </div>
{% endfor %}
{% endblock %}
{% block sidebar %}
<div>
  <h3 class="widget-title">{{ 'lbl.recent.post'|lng|capitalize }}</h3>

  <ul>
    {% for item in titles %}
        <li><a href="{{ meta.site }}blog/article/{{ item.id }}/{{ item.uri }}">{{ item.title }}</a></li>
    {% endfor %}
  </ul>

</div>
<div>
  <h3 class="widget-title">{{ 'lbl.categories'|lng|capitalize }}</h3>
  <ul>
    <li>{{ 'lbl.await.update'|lng|capitalize }}</li>
  </ul>
</div>
{% if session.user is not defined %}
<div>
  <h3 class="widget-title">{{ 'nav.login'|lng|capitalize }}</h3>
  <ul>
    <li><a href="{{ meta.site }}login">{{ 'nav.login'|lng|capitalize }}</a></li>
    <li><a href="{{ meta.site }}register">{{ 'nav.register'|lng|capitalize }}</a></li>
  </ul>
</div>
{% endif %}
{% endblock %}
