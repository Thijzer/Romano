{# Generated file from Resource #}

{% extends "base.twig" %}{% block content %}
{% for item in post %}
  <div class="well">
    <h3>
      <a href="{{ meta.site }}blog/article/{{ item.id }}/{{ item.slug }}">{{ item.title }}</a>
    </h3>
    <span>{{ 'lbl.poston'|lng }} {{ item.date }} by <a href="{{ meta.site }}blog/{{ item.author }}">{{ item.author }}</a>
    with {{ item.total_comments }} comments
    </span>
    <HR>
    <p>{{ item.preview|raw }}<a href="{{ meta.site }}blog/article/{{ item.id }}/{{ item.slug }}"> {{ 'lbl.more.post'|lng }}...</a></p>
  </div>
{% endfor %}
{% endblock %}
{% block sidebar %}
{% if session.user is not defined %}
<div>
  <h3 class="widget-title">{{ 'nav.login'|lng|capitalize }}</h3>
  <ul>
    <li><a href="{{ url('u_login') }}">{{ 'nav.login'|lng|capitalize }}</a></li>
    <li><a href="{{ url('register') }}">{{ 'nav.register'|lng|capitalize }}</a></li>
  </ul>
</div>
{% endif %}
{% endblock %}
